<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow">
        <div class="card-body text-center p-5">
          <h1 class="mb-4">Join Clask</h1>
          <p class="lead mb-4">We only use Google for authentication</p>
          
          <%= button_to user_google_oauth2_omniauth_authorize_path, class: "btn btn-primary btn-lg", data: { turbo: false } do %>
            <i class="bi bi-google me-2"></i> Sign up with Google
          <% end %>
          
          <div class="mt-4">
            <p>Already have an account? <%= link_to "Sign in", new_session_path(resource_name) %></p>
          </div>
          <div class="mt-3">
  <small>
    <%= link_to 'Privacy Policy', privacy_path, target: '_blank', rel: 'noopener noreferrer', class: 'text-decoration-none' %>
  </small>
</div>

        </div>
      </div>
    </div>
  </div>
</div>

